    public void overWriteCheck(boolean number, String value){
        String screenText = jLabelScreen.getText();
        if (number){
            try{
                if(-1 != screenText.indexOf(".")){                              //Change screen content based on buttons pressed
                    double num = Double.parseDouble(screenText);
                    jLabelScreen.setText(screenText + value);
                }else if(screenText.contains("+")|| screenText.contains("-") || screenText.contains("*")|| screenText.contains("/")){
                    aritmeticOperations(screenText, false);
                    jLabelScreen.setText(value);
                }else{
                    jLabelScreen.setText(screenText + value);
                }
            }catch(NumberFormatException e){
                jLabelScreen.setText(value);
            }
        }else{
            if(".".equals(value)){
                if(-1 == screenText.indexOf(value)){
                    jLabelScreen.setText(screenText + value);
                }
            }else if ("=".equals(value)){
                        aritmeticOperations(screenText, true);
                        if(Math.floor(op.getNum1()) == op.getNum1()){
                            int n =(int) op.getNum1();
                            jLabelScreen.setText(String.valueOf(n));
                        }else{
                        jLabelScreen.setText(String.valueOf(op.getNum1()));
                        }
                        if(op.isError()){
                            jLabelScreen.setText("Zero Division ");
                            op.setError(false);
                        }
                        op.setNum1(0.0);
            }else{
                aritmeticOperations(screenText, true);
                jLabelScreen.setText(value);
            }
        }
    }
    
    public void aritmeticOperations(String screenValue, boolean number){        //Use the addequate "Operations" class method
        if (number){
            if(0 == op.getNum1()){
                op.setNum1(Double.parseDouble(screenValue));
            }else{
                if ("+".equals(op.getOperator())){
                    op.Summ(Double.parseDouble(screenValue));
                }
                if ("-".equals(op.getOperator())){
                    op.Less(Double.parseDouble(screenValue));
                }
                if ("*".equals(op.getOperator())){
                    op.By(Double.parseDouble(screenValue));
                }
                if ("/".equals(op.getOperator())){
                    op.Divided(Double.parseDouble(screenValue));  
                }
            }
        }else{
            if("=".equals(screenValue)){
            //Pass
            }else{
            op.setOperator(screenValue);
            }
        }
    }
    
